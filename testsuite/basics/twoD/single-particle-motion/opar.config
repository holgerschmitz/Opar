
float size = 1e-5;
int nGrid = 200;
float dx = size/nGrid;

float xs = size/2;
float ys = size/2;
float T = size/clight;

float u0 = 100.0*clight;
float angle_u_azi = 0.0*pi;
float angle_u_pol = 0.25*pi;

Common {
  min_x = 0;
  min_y = 0;
  max_x = size;
  max_y = size;
  N_x = nGrid;
  N_y = nGrid;
  dt = dx/clight;
  end_time = T;
}

ConstFields {
  FieldInit {
    Ex = 0.0;
    Ey = 0.0; 
    Ez = 0.0;
    
    Bx = 0.0;
    By = 0.0;
    Bz = 0.0;
  }
}


Species Electrons {
  name = "electrons";
  charge = e;
  mass = me;
  
  TestParticle {
    px = xs;
    py = ys;
    
    ux = u0*cos(angle_u_azi)*sin(angle_u_pol);
    uy = u0*sin(angle_u_azi)*sin(angle_u_pol);
    uz = u0*cos(angle_u_pol);
  }
  
  boundary_maxx="periodic";
  boundary_minx="periodic";
}


ParticleDiagnostic phase {
  file = "phase_#t.h5";
  field = "electrons";
  interval = 1;
  append = 0;
}
