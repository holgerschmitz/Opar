float size = 5e5;
float veth = sqrt(2)*6.4e4; // sqrt(2) doesn't work
float vth = 1.41*6.4e4; // sqrt(2) doesn't work

tMax = 0.15;
Lx = size;
Nx = 400;
dt = Lx/(Nx*clight);

EMFields {  
  Ex = 0.0;
  Ey = 0.0;
  Ez = 0.0;
  
  Bx = 0.0;
  By = 0.0;
  Bz = 0.0;
}

Species Forward {
  name = "forward";
  charge = e;
  mass = me;
  ppc = 10;
  density = 10*(1 + 0.1*sin(6.28318530717959*x/5e5));  // using pi and size here causes errors
  temperaturex = vth;
  temperaturey = vth;
  temperaturez = vth;
  driftx = 2.744e6;
  drifty = 0.0;
  driftz = 0.0;
  
  boundary_maxx="periodic";
  boundary_minx="periodic";
}

Species Backward {
  name = "backward";
  charge = e;
  mass = me;
  ppc = 10;
  density = 10*(1 + 0.1*sin(6.28318530717959*x/5e5));
  temperaturex = vth;
  temperaturey = vth;
  temperaturez = vth;
  driftx = -2.744e6;
  drifty = 0.0;
  driftz = 0.0;
  
  boundary_maxx="periodic";
  boundary_minx="periodic";
}

